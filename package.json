{
  "//1": "describes your app and its dependencies",
  "//2": "https://docs.npmjs.com/files/package.json",
  "//3": "updating this file will download and update your packages",
  "name": "hello-express",
  "version": "0.0.1",
  "description": "A simple Node app built on Express, instantly up and running.",
  "private": true,
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./lib/server.js",
    "server": "cross-env NODE_ENV=development nodemon server.js --exec babel-node -e js",
    "client": "cd client && npm start",
    "client-build": "cd client && npm run build",
    "server-build": "rm -rf lib && cross-env NODE_ENV=production babel ./ -d lib --ignore \"./client\",\"./node_modules\"",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm run server-build && npm run client-build"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "cross-env": "^5.2.1",
    "dotenv": "^8.0.0",
    "express": "^4.18.2",
    "gravatar": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mongodb": "^3.2.7",
    "mongoose": "^5.6.0",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "nodemon": "^2.0.15",
    "react-redux": "^7.2.6",
    "redux": "^4.1.2",
    "sse-pubsub": "^1.2.1"
  },
  "engines": {
    "node": "8.x"
  },
  "repository": {
    "url": "https://glitch.com/edit/#!/hello-express"
  },
  "license": "MIT",
  "keywords": [
    "node",
    "glitch",
    "express"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "concurrently": "^7.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "mocha": "^9.2.0"
  }
}
